<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.escuela.app.sistemaescolarfx.controllers.PersonaController"
            stylesheets="@../styles/style.css"
>

    <center>
        <VBox spacing="15" alignment="CENTER" BorderPane.alignment="CENTER">
            <Label text="Gestión de Personas" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <GridPane hgap="10" vgap="10">
                <padding>
                    <Insets top="10" right="20" bottom="10" left="20"/>
                </padding>

                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" />
                    <ColumnConstraints hgrow="ALWAYS" />
                </columnConstraints>

                <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtNombre" GridPane.rowIndex="0" GridPane.columnIndex="1" promptText="Ej: Juan"/>

                <Label text="Apellido:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="txtApellido" GridPane.rowIndex="1" GridPane.columnIndex="1" promptText="Ej: Hernández"/>

                <Label text="Sexo:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <ChoiceBox fx:id="cbSexo" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Fecha Nacimiento:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <DatePicker fx:id="dpFecha" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Rol:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <ChoiceBox fx:id="cbRol" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            </GridPane>

            <HBox spacing="10" alignment="CENTER">
                <Button text="Agregar" onAction="#insertarPersona" prefWidth="100"/>
                <Button text="Actualizar" onAction="#mostrarPersonas" prefWidth="100"/>
                <Button text="Editar" onAction="#editarPersona" prefWidth="100"/>
                <Button text="Eliminar" onAction="#eliminarPersona" prefWidth="100"/>

            </HBox>

            <TableView fx:id="tablaPersonas" prefHeight="220" prefWidth="550">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="colNombre" text="Nombre" prefWidth="100"/>
                    <TableColumn fx:id="colApellido" text="Apellido" prefWidth="100"/>
                    <TableColumn fx:id="colSexo" text="Sexo" prefWidth="50"/>
                    <TableColumn fx:id="colFecha" text="Nacimiento" prefWidth="100"/>
                    <TableColumn fx:id="colRol" text="Rol" prefWidth="100"/>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
